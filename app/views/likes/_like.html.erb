<div class="like-link" id="like-link-<%= task.id %>">
  <% if current_user.likes.find_by(task_id: task.id) %>
    <%= link_to unlike_path(task.id), method: :delete, remote: true do %>
        <div class = "iine_button">❤️<%= task.likes.count %></div>
    <% end %>
  <% else %>
    <%= link_to like_path(task.id), method: :post, remote: true do %>
        <div class = "iine_button">♡️<%= task.likes.count %></div>
    <% end %>
  <% end %>
</div>