<span class="like-link" id="like-link-<%= task.id %>">
  <% if current_user.likes.find_by(task_id: task.id) %>
    <%= link_to unlike_path(task.id), method: :delete, remote: true do %>
        <span class = "iine_button"><i class="fas fa-heart">いいね</i><%= task.likes.count %></span>
    <% end %>
  <% else %>
    <%= link_to like_path(task.id), method: :post, remote: true do %>
        <span class = "iine_button"><i class="far fa-heart">いいね！</i><%= task.likes.count %></span>
    <% end %>
  <% end %>
</span>