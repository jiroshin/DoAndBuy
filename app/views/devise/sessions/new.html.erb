<center>
<div class="register_login">
<h2>ログイン</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    <%= f.label :email, 'メールアドレス' %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control login-form' %>
  </div>

  <div class="field">
    <%= f.label :password, 'パスワード' %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: 'form-control login-form' %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, 'ログイン情報を保存する' %>
    </div>
  <% end -%>

  <div class="actions">
    <%= f.submit "ログイン", class: 'base_btn' %>
  </div>
<% end %>
</div>

</center>